{
  "compilerOptions": {
    "target": "ES2015",
    "module": "Node16",
    "baseUrl": "./",
    "lib": [
      "ES2020"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": [
    "lib"
  ]
}
